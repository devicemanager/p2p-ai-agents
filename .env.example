# Environment variables for P2P AI Agents
# Copy this file to .env and customize for your environment

# Agent Configuration
AGENT_NAME=my-p2p-agent
AGENT_ID=""  # Leave empty to auto-generate

# Network Settings
LISTEN_PORT=8000
BOOTSTRAP_NODES="bootstrap1.p2p-ai-agents.org:4001,bootstrap2.p2p-ai-agents.org:4001"
MAX_CONNECTIONS=50

# Storage and Cache
DATA_PATH=./data/agent
REDIS_URL=redis://localhost:6379/0
IPFS_API_URL=http://localhost:5001

# AI/ML Settings
DEFAULT_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEVICE=auto
MODEL_CACHE_PATH=./models

# Security
ENABLE_ENCRYPTION=true
REQUIRE_SIGNATURES=true

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log
MONITORING_PORT=8080
ENABLE_METRICS=true

# Development
DEBUG_MODE=false
MOCK_NETWORK=false
